<%= simple_form_for @student, html: { :class => 'form-horizontal' }, remote: true do |f| %>
    <%= f.input :first_name, input_html: {class: "avg"} %>
    <%= f.input :last_name, input_html: {class: "avg"} %>
    <%= f.input :grade, input_html: {class: "avg"} %>
    
    <!-- Note in this case that can't use @project; use params[:project_id] -->
    <%= f.input :team_id, as: :hidden, input_html: { value: params[:team_id] } %>

    <p>&nbsp;</p>
    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Cancel', students_path, class: 'button radius alert' %>
    </div>  
<% end %>