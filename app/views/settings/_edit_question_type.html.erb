    <div id="edit_question_type"class="card blue-grey">
        <div class="card-content white-text">
            <span class="card-title">Edit Quiz Question Types</span>
            <p>By editing the settings below, you can choose which question types are used. </p>
        </div>
        <div class="card-action"  id="edit_card">
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Active</th>
              </tr>

            </thead>
            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td><%= category.name.humanize %></td>
                  <% if category.active == true %>
                  <td><%= link_to toggle_quiz_question_path(category, active: false), remote: true, method: 'patch' do %>
                    <i class="mdi-toggle-check-box tiny"></i>
                <% end %>
              </td>
                <% elsif category.active == false %>
              <td><%= link_to toggle_quiz_question_path(category, active: true), remote: true, method: 'patch' do %>
                <i class="mdi-navigation-cancel tiny"></i>
                <% end %>
              </td>
              <% end %>
                </tr>
                <% end %>
            </tbody>
          </table>

        </div>

    </div>