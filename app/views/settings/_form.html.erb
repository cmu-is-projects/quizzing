<div class ="row">
  <%= simple_form_for(@setting) do |f| %>
  <% if @setting.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

    <ul>
      <% @setting.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <form class="col 10">
    <div class ="row">
      <div class ="input-field col 10">
        <input id="area_name" type="text">
        <label for="area_name"> Area Name</label>
      </div>
    </div>
    <div class="row">
      <div class ="input-field col 6">
        <input id="admin_name" type="text">
        <label for="admin_name"> Admin Name</label>
      </div>
      <div class="input-field col 6">
        <input id="admin_email" type="email">
        <label for="admin_email"> Admin Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <textarea id="intro" class="materialize-textarea"></textarea>
        <label for="textarea1">District Introduction</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col 10">
        <input id="roster_lock_date" type="date" class="datepicker">
        <label for="roster_lock_date" class="active">Roster Lock Date</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field switch">
        <label class="active">
          No
        <input id="drop_lowest_score" type="checkbox"> 
        <span class="lever"></span>
        Yes
        </label>
        </div>
      </div>
      <br>
      <div class="row">
        <label></label>
        <div class="input-field switch">
          <label class="active">
            No
          <input id="roster_lock_toggle" type="checkbox"> 
          <span class="lever"></span>
          Yes
          </label>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="input-field switch">
            <label class="active">
              No
            <input id="auto_promote_students" type="checkbox"> 
            <span class="lever"></span>
            Yes
            </label>
            </div>
          </div>
        </div>

  <div class="form-actions">

     <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="mdi-content-send right"></i>
      </button>
    <%= link_to 'Back', settings_path, :class => 'button secondary' %>
  </div>

</div>
<% end %>
</form>
</div>
