<div class ="row">
  <%= form_for(@setting, class: 'col 10') do |f| %>
  <% if @setting.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

    <ul>
      <% @setting.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>


    <div class ="row">
      <div class ="input-field col 10">
        <%= f.text_field :area_name %>
        <!-- <input id="setting_area_name" name="setting[area_name]" type="text"/> -->
        <label for="setting_area_name"> Area Name</label>
      </div>
    </div>
    <div class="row">
      <div class ="input-field col 6">
        <%= f.text_field :admin_name %>
        <!-- <input id="setting_admin_name" name="setting[admin_name]" type="text"/> -->
        <label for="setting_admin_name"> Admin Name</label>
      </div>
      <div class="input-field col 6">
        <%= f.email_field :admin_email %>
        <!-- <input id="setting_admin_email" name="setting[admin_email]" type="email"/> -->
        <label for="setting_admin_email"> Admin Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_area :intro, class: 'materialize-textarea' %>
     <!--    <textarea id="setting_intro" name="setting[intro]" class="materialize-textarea"></textarea> -->
        <label for="setting_intro">District Introduction</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col 10">
        <%= f.date_field :roster_lock_date, class: 'datepicker' %>
        <!-- <input id="setting_roster_lock_date" name="setting[roster_lock_date]" type="date" class="datepicker"> -->
        <label for="setting_roster_lock_date" class="active">Roster Lock Date</label>
      </div>
    </div>
    <label>Drop Lowest Score</label>
    <div class="row">
      <div class="input-field switch">
        <label class="active"> 
          No
          <%= f.check_box :drop_lowest_score %>
 <!--        <input id="setting_drop_lowest_score" name="setting[drop_lowest_score]" type="checkbox"> --> 
        <span class="lever"></span>
        Yes
        </label>
        </div>
      </div>
      <label>Lock Roster</label>
      <div class="row">
        <div class="input-field switch">
          <label class="active">
            No
            <%= f.check_box :roster_lock_toggle %>
         <!--  # <input id="setting_roster_lock_toggle" name="setting[roster_lock_toggle]" type="checkbox">  -->
          <span class="lever"></span>
          Yes
          </label>
          </div>
        </div>
        <label>Auto Promote Students</label>
        <div class="row">
          <div class="input-field switch">
            <label class="active">
              No
              <%= f.check_box :auto_promote_students %>
            <!-- <input id="auto_promote_students" name="setting[auto_promote_students]" type="checkbox">  -->
            <span class="lever"></span>
            Yes
            </label>
            </div>
          </div>
  <div class="form-actions">
    <%= f.submit nil, class: 'btn large', value: 'Submit' %>
<!--      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="mdi-content-send right"></i>
      </button> -->
    <%= link_to 'Back', settings_path, :class => 'button secondary' %>
  </div>
<% end %>
</div>

