<% @divisions.each do |d| %>
  <div class= "row">
    <h4 class="header"> <%= d.name %></h4>
    <table class="hoverable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Organization</th>
        </tr>
      </thead>

      <tbody>
        <% @active_teams.each do |team| %>
          <% if team.division == d %>
            <tr>
              <td><%= link_to team.name, team_path(team) %></td>
              <td><%= team.organization.name %></td>
              <% if can? :update, team %>
                  <td><%= link_to 'Edit', edit_team_path(team), class: "button tiny radius" %></td>
              <% end %>
            </tr>
          <% end %>
        <%end%>
      </tbody>
    </table>
  </div>
<% end %>