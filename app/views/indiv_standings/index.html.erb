<div class="container">

	<h2>Individual Standings</h2>
	<div class="row">
		<div class="col s12">
			<ul class="tabs">
				<li class="tab col s2"><a class="active" href="#division1">Junior</a></li>
				<li class="tab col s2"><a href="#division2">Senior</a></li>
				<li class="tab col s2"><a href="#division3">Senior B</a></li>
			</ul>
		</div>

		<div id="division1" class="col s12">
			<div class="row">
				<div class="col 12 m12">
					<div class="card blue-grey lighten-5">
						<div class="card-content black-text">
							<table class="centered striped">
								<thead>
									<tr>
										<th>Rank</th>
										<th>Student</th>
										<th>Team</th>
										<th>Points</th>
										<th>Low</th>
										<th>Adjusted</th>
										<th>Accuracy</th>
									</tr>
								</thead>
								<tbody>
									<% @juniors.each do |j| %>
									<tr>
										<td><%= j.position %></td>
										<td><%= j.student.name %></td>
										<td><%=	j.student.current_team.name %></td>
										<td><%= j.total_points %></td>
										<td><%= j.lowest_score %></td>
										<td><%= j.adjusted_points%></td>
										<td><%= j.accuracy %></td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>

