<div id="coaches">
  <div class="card blue-grey lighten-5">
    <div class="subtitle card-content black-text">
      <span class="card-title black-text">
        <div class="row">
          <div class="col m8"><i class="small mdi-action-assignment"></i> Coaches</div>
          <div class="col m4">
            <p class="subtitle"> Total: <%=@coaches.size%> </p> 
          </div>
        </div>
      </span>
      <div class="divider"></div>
      <table>
        <thead>
          <th>Name</th>
          <th>Active</th>
        </thead>
        <tbody>
          <% count = 0 %>
          <% @coaches.each do |c| %>
            <% if count < 5 %>
              <tr>
                <td><%=c.proper_name%></td>
                <td></td>
              </tr>
            <% else %>
              <tr class="more-coaches">
                <td><%=c.proper_name%></td>
                <td></td>
              </tr>
            <% end %>
            <% count += 1%>
          <%end%>
          <% if @coaches.length >= 6 %> 
            <tr>
              <td></td>
              <td align="right"><a class="more-coaches" href="#"> More <i class="fa fa-angle-double-down"></i></a></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>