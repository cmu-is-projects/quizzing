<div id="coaches">
  <div class="card blue-grey lighten-5">
    <div class="subtitle card-content black-text">
      <span class="card-title black-text">
        <div class="row">
          <div class="col m8"><i class="small mdi-action-assignment"></i> Coaches</div>
          <div class="col m4">
           <p class="total center"> Total: <%=@coaches.size%> </p> 
          </div>
        </div>
      </span>
      <div class="divider"></div>
      <table>
        <thead>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Active</th>
        </thead>
        <tbody>
          <% count = 0 %>
          <% @coaches.each do |c| %>
            <% if count < 5 %>
              <tr>
                <td><%= best_in_place c, :first_name, :as => :input, :display_as => :first_name %></td>
                <td><%= best_in_place c, :last_name, :as => :input, :display_as => :last_name %></td>
                <% if c.active == true %>
                  <td><%= link_to toggle_coach_path(c, active: false), remote: true, method: 'patch' do %>
                  <i class="mdi-toggle-check-box tiny"></i>
                  <% end %>
                  </td>
                <% else %>
                  <td><%= link_to toggle_coach_path(c, active: true), remote: true, method: 'patch' do %>
                    <i class="mdi-navigation-cancel tiny"></i>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% else %>
              <tr class="more-coaches">
                <td><%= best_in_place c, :first_name, :as => :input, :display_as => :first_name %></td>
                <td><%= best_in_place c, :last_name, :as => :input, :display_as => :last_name %></td>
                <% if c.active == true %>
                  <td><%= link_to toggle_coach_path(c, active: false), remote: true, method: 'patch' do %>
                  <i class="mdi-toggle-check-box tiny"></i>
                  <% end %>
                  </td>
                <% else %>
                  <td><%= link_to toggle_coach_path(c, active: true), remote: true, method: 'patch' do %>
                    <i class="mdi-navigation-cancel tiny"></i>
                    <% end %>
                  </td>
                <% end %>
              </tr>
              </tr>
            <% end %>
            <% count += 1%>
          <%end%>
          <% if @coaches.length >= 6 %> 
            <tr>
              <td></td>
              <td></td>
              <td align="right"><a class="more-coaches" href="#"> More <i class="fa fa-angle-double-down"></i></a></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>