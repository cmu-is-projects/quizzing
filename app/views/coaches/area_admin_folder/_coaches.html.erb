<div id="coaches">
  <div class="card blue-grey lighten-5">
    <div class="subtitle card-content black-text">
      <span class="card-title black-text">
        <div class="row">
          <div class="col m8">Coaches</div>
          <div class="col m4">
            <p class="subtitle"> Total: <%=@coaches.size%> </p> 
          </div>
        </div>
      </span>
      <div class="divider"></div>
      <table class="center">
        <thead>
          <th>Name</th>
          <th>Active</th>
        </thead>
        <tbody>
          <% @coaches.each do |c| %>
            <tr>
              <td><%=c.proper_name%></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>