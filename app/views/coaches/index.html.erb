<div class="container">
<h3> Welcome, <%= @coach.proper_name %> </h3> 
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s2"><a class="active" href="#division1">Junior</a></li>
        <li class="tab col s2"><a href="#division2">Senior </a></li>
        <li class="tab col s2"><a href="#division3">Senior B</a></li>
      </ul>
    </div>
  </div>

    <div id="division1" class="col s12">
      <div class="row">
        <!-- Junior Teams Column -->
        <div class="col 4 m6">
          <%= render(:partial => "team_cards", :locals => {:team => @junior_teams})%>
        </div>

        <!-- Stats Column -->
        <div class="col 3 m5">
          <%= render 'stat_cards' %>
        </div>
      </div>
    </div>

    <div id="division2" class="col s12">
      <div class="row">
       <!-- Senior Teams Column -->
        <div class="col 4 m6">
          <%= render(:partial => "team_cards", :locals => {:team => @senior_teams})%>
        </div>
      </div>
      <!-- Stats Column -->
      <div class="col 3 m5">
        <%= render 'stat_cards' %>
      </div>
    </div>

    <div id="division3" class="col s12">
      <div class="row">
       <!-- Senior Teams Column -->
        <div class="col 4 m6">
          <%= render(:partial => "team_cards", :locals => {:team => @seniorb_teams})%>
        </div>
      </div>
      <!-- Stats Column -->
      <div class="col 3 m5">
        <%= render 'stat_cards' %>
      </div>
    </div>

</div>