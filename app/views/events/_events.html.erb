<!-- List of events-->

<% if current_user.role?(:admin) %>
  <div class="row">
    <br>
    <%= link_to 'Add a New Event', new_event_path, class: "btn waves-effect waves-light right mdi-content-add" %>
  </div>
<% end %>


<div class="row">
  <div class="card">
    <div class="card-content black-text">
      <h5 class="header"> Events for <%= QuizYear.new.span %></h5>
      <div class="divider"></div>
      <table class="bordered">
        <thead>
          <tr>
            <th>Date</th>
            <th>Location</th>
          <tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
          <tr>
            <td><%= event.start_date.strftime('%B %d, %Y') %></td>
            <td><%#= link_to event.organization.name, organization_path(event.organization) %>
              <%= event.organization.name %>
            </td>
            <td><%= link_to 'Details', event_path(event), class: :" btn waves-effect waves-light" %> </td>
            <% if current_user.role?(:admin) %>
            <td><%= link_to 'Edit', edit_event_path(event), class: :" btn waves-effect waves-light" %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>





