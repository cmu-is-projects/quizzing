  <div class="fields">
    <div class="min_attraction">
      <!-- x icon to remove -->
      <%= f.link_to_remove("x") %>
      <!-- fields -->
	  <%= f.input :round_num %>
	  <%= f.input :room_num %>
	  <%= f.input :id, :as => :hidden, :input_html => { :value => "some value" }%>
	  <%= f.input :event_id, :as => :hidden, :input_html => { :value => "some value" }%>
	  <%= f.input :division_id, collection: Division.active.alphabetical, prompt: "Please select Division..." %>
	  <%= f.input :category_id, collection: Category.alphabetical, prompt: "Please select Category..." %>
	  <%= f.input :active, as: :radio_buttons %>
    </div>
  </div>

    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Back to events', events_path, :class => 'button secondary radius' %>
    </div>