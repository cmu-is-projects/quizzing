<div class="container">
  <label>Teams</label>
  <select class="browser-default" onchange= "f.submit">
    <option value="" disabled selected>Select your team</option>
    <%=@junior_teams.each do |j| %>
      <option value= "#{j.team_id}"><%=j.name%></option>
    <%end%>
  </select>



<table class="striped responsive">
  <thead>
    <tr>
        <th>Round</th>
        <th>Room</th>
        <th>Position 1</th>
        <th>Position 2</th>
        <th>Position 3</th>
    </tr>
  </thead>
  <tbody>
    <% count=1 %>
    <% @matrix.each do |m|%>
      <%if m[0] > count%>
        <tr>
          <td><%=count%></td>
          <td>N/A</td>
          <td>BYE</td>
          <td></td>
          <td></td>
        </tr>
        <%count += 1%>
      <%end%>
      <%if m[2].team_id == @team.id%>
        <tr>
          <td><%=m[0]%></td>
          <td><%=m[1]%></td>
          <td><strong><%=m[2].team.name%></strong></td>
          <td><%=m[3].team.name%></td>
          <td><%=m[4].team.name%></td>
        </tr>
        <%count += 1%>
      <% elsif m[3].team_id == @team.id%>
        <tr>
          <td><%=m[0]%></td>
          <td><%=m[1]%></td>
          <td><%=m[2].team.name%></td> 
          <td><strong><%=m[3].team.name%></strong></td>
          <td><%=m[4].team.name%></td>
        </tr>
        <%count += 1%>
      <% elsif m[4].team_id == @team.id%>
        <tr>
          <td><%=m[0]%></td>
          <td><%=m[1]%></td>
          <td><%=m[2].team.name%></td>
          <td><%=m[3].team.name%></td>
          <td><strong><%=m[4].team.name%></strong></td>
        </tr>
        <%count += 1%>
      <%elsif count == @total_round_num && m == @matrix.last %>
        <tr>
          <td><%=count%></td>
          <td>N/A</td>
          <td>BYE</td>
          <td></td>
          <td></td>
        </tr>
      <%end%>
    <%end%>
  </tbody>
</table>