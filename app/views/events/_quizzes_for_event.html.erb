<% if logged_in? %> <!--&& (current_user.role?(:admin) || current_user.role?(:area_admin)) %>--><!--TODO: authorize correctly-->
<!-- TODO: Ajax button to add a new quiz -->
	<% if @event == Event.where("start_date >= ?", Date.today).order(:start_date).first %>
	  <%= link_to(new_quiz_path, id: 'new_quiz_link', class: 'small button radius', remote: true) do %>
  <!-- <i class="fa fa-clipboard"></i> --><!--what is dis?-->
  &nbsp;Add New Quiz
   	  <% end %><!--link_to-->
  	<% end %><!--if-->
<% end %><!--authorization-->

<% unless @quizzes.empty? %>
	<h3>Quizzes</h3><br />
	<table>
	   	<thead>
	   		<tr>
				<th>Round Number</th>
				<th>Room Number</th>
				<th>Division</th>
				<th>Category</th>
				<th>Active</th>
				<% if logged_in? %> <!--&& (current_user.role?(:admin) || current_user.role?(:area_admin)) %>--><!--TODO: authorize correctly-->
				<!-- TODO: Ajax button to add a new quiz -->
				  <th>Edit</th>
				<% end %>
			</tr>
		</thead>

		<tbody>
			<% @quizzes.each do |quiz| %>
				<tr>
					<td><%= link_to quiz.round_num, quiz_path(quiz) %></td>
					<td><%= quiz.room_num %></td>
					<td><%= quiz.division.name %></td>
					<td><%= quiz.category.name %></td>
					<td><%= quiz.active ? "Yes" : "No" %></td>
					<% if logged_in? %> <!--&& (current_user.role?(:admin) || current_user.role?(:area_admin)) %>--><!--TODO: authorize correctly-->
					<!-- TODO: Ajax button to add a new quiz -->
					  <td><%= link_to 'Edit', edit_quiz_path(quiz), class: "button tiny radius" %></td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>

<%else%><!--No teams for this division-->

    <div class="panel clearfix">
      <h3><%= "No quizzes for this event" %></h3>
    </div>

<% end %>
