<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(session_create_path, method: :post) do %>

      <%= label_tag :username %>
      <%= text_field_tag 'username' %>

      <%= label_tag :password %>
      <%= password_field_tag 'password' %>

      <%= submit_tag "Log in", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
