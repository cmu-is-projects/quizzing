<div class="container">
	<div class="centered">
		<div class="card blue-grey darken-1">
            <div class="card-content white-text">

				<span class="card-title">Login</span>

				<div class="col s12">
					<%= form_tag(session_create_path, method: :post) do %>
						<div class="row">
							<div class="input-field col s12">
								<%= label_tag :username %>
								<%= text_field_tag 'username' %>
							</div>
						</div>

						<div class="row">
							<div class="input-field col s12">
								<%= label_tag :password %>
								<%= password_field_tag 'password' %>
								<br />

								<!-- Modal Trigger -->
							  	<a class="modal-trigger" href="#modal1">Reset Password</a>
							</div>
						</div>

						<div class="row">
							<div align="right">	
								<button class="btn waves-effect waves-light" type="submit" name="action">Login<i class="mdi-content-send right"></i>
								</button> 
							</div>
						</div>
					<% end %>
				</div>



  <!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content" style="color: black;">
		<div class="row">
    		<h4>Password Reset</h4>

    		<p>If you forgot your password, provide your email and if it matches what we have 
		      on file, we will send you an option to reset the password. Please note that this 
		      option is time-dependent and is good for only one hour; if you do not complete 
		      this process in this time, your password will remain as it was last set.</p><br>
 		 </div>

  		<div class="row">
          <%= form_tag password_resets_path, method: :post do %>

            <div class="field">
              <%= label_tag :email, "Email: " %>
              <%= text_field_tag :email, params[:email] %>
            </div>
        </div>
    </div>



    <div class="modal-footer">
        <button class="modal-action modal-close waves-effect waves-green btn-flat" type="submit" name="action">Reset Password
		</button> 
       <% end %>	
    </div>
</div>
<!--  -->



			</div>
		</div>
	</div>
</div>




